!!! 5
%html
  %head
    %meta{ :name => "viewport", :content => 'width=device-width', 'initial-scale' =>"1.0"}
    %title= "Your Website"
    =yield :meta
    =javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'
    =javascript_include_tag :application
    =stylesheet_link_tag :application
  %body
    %div{ 'data-facebook-app-id' => ENV['FACEBOOK_APP_ID'] }
    .header
      .left-header
        - if logged_in?
          You have 
          = @tapsters.size
          tapsters.

      .right-header
        - if logged_in?
          = link_to(current_user.try(:name), user_path(current_user))
          = '::'
          = link_to('Log out', '/logout')
        - else
          #sign_in
            = image_tag('fb_login_icon.gif')
    %h1 Tapster.
    #container
      = yield
